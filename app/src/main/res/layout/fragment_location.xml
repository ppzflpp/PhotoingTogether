<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.freegeek.android.sheet.fragment.LocationFragment">

    <com.freegeek.android.sheet.ui.MyMaterialList
        android:id="@+id/list_sheet"
        app:column_count="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.freegeek.android.sheet.ui.MyMaterialList>

    <LinearLayout
        android:id="@+id/linear_tip_location"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@android:color/darker_gray"
            android:src="@drawable/ic_location_on_grey_24dp"/>

        <TextView
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="荒无人烟"/>
    </LinearLayout>
</FrameLayout>
