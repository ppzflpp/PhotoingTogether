<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/scrollView" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.freegeek.android.sheet.fragment.ProfileFragment">


        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/avatar"
                    android:id="@+id/profile_img_avatar"
                    app:siBorderWidth="2dp"
                    app:siBorderColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_logined_in"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:id="@+id/profile_txt_nick" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:id="@+id/profile_btn_bottom" />


    </LinearLayout>

</ScrollView>

